@using ELearningProject.Models
@model RegisterViewModel
@{
    Layout = null;
}
<style>
    @@import "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css";

    .label {
        font-size: 1.6rem;
    }
    /*.checkmark {
        position: absolute;
        top: 77.5%;
        height: 18px;
        width: 18px;
        background-color: #eee;
        display: inline;
    }*/

    label {
        position: absolute;
        top: 77.4%;
        cursor: pointer;
        color: #383A3F;
        display: block;
        margin-bottom: 10px;
        font-size: 2.0em;
    }

        label input[type="checkbox"] + .label-text:hover:before {
            color: #79c177;
        }

        label input[type="checkbox"] {
            display: none;
        }

            label input[type="checkbox"] + .label-text:before {
                content: "";
                color: #dddfe6;
                font-family: "fontAwesome";
                line-height: 1;
                width: 1em;
                display: inline-block;
                margin-right: 5px;
            }

            label input[type="checkbox"]:checked + .label-text:before {
                content: "";
                color: #79c177;
                animation: tick 150ms ease-in;
            }

    @@keyframes tick {
        0% {
            transform: scale(0);
        }

        90% {
            transform: scale(1.3);
        }

        100% {
            transform: scale(1);
        }
    }
</style>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- FONT -->
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/loginstyle.css">
    <title>Document</title>
</head>

<body>
    <div class="container">

        <div class="login" style="position: relative">
            <img src="~/Content/Images/logo2.svg" alt="" class="login__logo mb-5">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "frmId", @class = "login__form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "login__input", @placeholder = "Email" } })
                @Html.ValidationMessageFor(m => m.Email)
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "login__input", @placeholder = "Password" } })
                @Html.ValidationMessageFor(m => m.Password)
                @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "login__input", @placeholder = "Confirm Password" } })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "login__input", @placeholder = "Birthday" } })
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "login__input", @placeholder = "Your Name" } })
                <div>
                    @*@Html.EditorFor(m => m.AsTeacher, new { htmlAttributes = new { @class = "checkmark" } })*@
                    <label>
                        <input type="checkbox" name="check" /><span class="label-text"></span>
                    </label>
                    @Html.ValidationMessageFor(m => m.AsTeacher, "", new { @class = "text-danger" })
                    <span>&nbsp;</span>
                    <p class="label" style="display:inline; position:absolute; left: 6%;">Login as a teacher</p>
                </div>
                <button type="submit" value="Create" class="login__submit">Sign up</button>
                @*<a onclick="this.form.submit()" class="login__submit" value="Sign in">Sign up</a>*@
            }
            <div class="login__break">&nbsp;</div>
        </div>
    </div>

</body>

</html>